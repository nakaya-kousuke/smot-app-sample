= render "layouts/header-sub"
.session-container
  .session-top-contents
    .session-title
      ログイン
      %br/
      = render "devise/shared/links"
  .session-bottom-contents
    .left-content
      .service-title
        smotについて
      .service-overview
        サービス説明
    .right-content
      .session-form-box
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.label :メールアドレス
            %br/
            = f.email_field :email, placeholder: "登録したメールアドレスを入力", autofocus: true, autocomplete: "email", class: "input-default"
          .field
            = f.label :パスワード
            %br/
            = f.password_field :password, placeholder: "7文字以上の半角英数字", autocomplete: "current-password", class: "input-default"
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :ログイン情報を保存する
          .field
            = f.submit "ログイン", class: "btn"
= render "layouts/footer"